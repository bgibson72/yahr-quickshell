//  https://github.com/m3tozz/FastCat

{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "type": "kitty-direct",
    "source": "~/.config/fastfetch/current-theme-logo.png",
    "width": 20,
    "preserveAspectRatio": true,
    "padding": {
      "top": 2,
      "right": 3
    }
  },
  "display": {
    "separator": " ",
    "pipe": false
  },
  "modules": [
    {
      "type": "title",
      "keyWidth": 12
    },
    "break",
    "break",
    {
      "type": "os",
      "key": "OS 󰌽 ",
      "keyColor": "34",
      "keyWidth": 12
    },
    {
      "type": "wm",
      "key": "WM 󱇛 ",
      "keyColor": "34",
      "keyWidth": 12
    },
    {
      "type": "cpu",
      "key": "CPU  ",
      "keyColor": "34",
      "keyWidth": 12
    },
    {
      "type": "memory",
      "key": "RAM  ",
      "keyColor": "34",
      "keyWidth": 12
    },
    {
      "type": "command",
      "key": "THEME  ",
      "keyColor": "34",
      "keyWidth": 12,
      "text": "grep 'themeName:' ~/.config/quickshell/ThemeManager.qml 2>/dev/null | sed -E 's/.*\"(.+)\".*/\\1/' || echo 'Unknown'"
    },
    "break",
    "break",
    "break"
  ]
}
